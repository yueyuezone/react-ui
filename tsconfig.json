{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "module": "commonjs",
    //"noUnusedLocals": false,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":true,
    "jsx": "react",
    //"allowJs": true,
    "baseUrl": "./",
    //"checkJs": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "disableSizeLimit": false,
    "outDir": "./dist"
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "script",
    "webpack",
    "jest",
    "*.js"
  ]
}